@model IEnumerable<E_Learning.Models.Teacher>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewBag.Title = "IndexTeach";
}





<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover table-light text-center" id="dataTable" width="100%" cellspacing="0">
            <thead class="bg-dark text-light ">
                <tr>
                    <th> @Html.DisplayNameFor(model => model.TeachName)</th>
                    <th>
                        @Html.DisplayNameFor(model => model.TeachPhoto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Subject.SubName)
                    </th>
                    <th></th>
                </tr>

            </thead>
            <tfoot class="bg-dark text-light">
                <tr>
                    <th> @Html.DisplayNameFor(model => model.TeachName)</th>
                    <th>
                        @Html.DisplayNameFor(model => model.TeachPhoto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Subject.SubName)
                    </th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TeachName)
                        </td>
                        <td>
                            <img src="~/Image/Teachers/@item.TeachPhoto" width="100" height="100">


                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject.SubName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit personal Data", "Edit", new { id = item.TeachId }, new { @class = "text-success mb-2" }) 
                            @Html.ActionLink("Edit classes Data", "EditLevelTeach", new { id = item.TeachId }, new { @class = "text-details mb-2" })
                            <br />
                            @Html.ActionLink("Videos", "TeachLevel", new { id = item.TeachId }, new { @class = "text-warning" })
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            @Html.ActionLink("Delete", "DeactiveTeacher", new { id = item.TeachId }, new { @class = "text-danger" })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>
