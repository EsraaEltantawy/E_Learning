@model IEnumerable<E_Learning.Models.Thevideo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}





    <table class="table table-light table-hover table-borderless table table-striped ">
        <tr class=" bg-dark text-warning">
            <th>
                @Html.DisplayNameFor(model => model.VideoPath)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.Title)
            </th>


            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <video controls="controls" style="width:300px;height:200px;">
                        <source src="~/video/@item.VideoPath" type="video/webm" />
                        @*<source src="@item.VideoPath.webm" type="video/webm" />
                        <source src="@item.VideoPath.ogv" type="video/ogg" />*@
                    </video>
                    @*<iframe width="200" height="100" src="https://www.youtube.com/embed/@item.VideoPath" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>

                    </iframe>*@
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Title, new { @class = "text-primary" })
                </td>


                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Delete", "DeleteVideo", new { id = item.VideoId }, new { @class = "btn btn-danger" })

                    }
                </td>
            </tr>
        }

    </table>
