@model IEnumerable<E_Learning.Models.Class>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-warning" })
</p>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped table-light text-center" id="dataTable" width="100%" cellspacing="0">
            <thead class="bg-dark text-light ">
                <tr>
                    <th> @Html.DisplayNameFor(model => model.ClassName)</th>
                    <th></th>
                </tr>

            </thead>
            <tfoot class="bg-dark text-light">
                <tr>
                    <th> @Html.DisplayNameFor(model => model.ClassName)</th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.LevelID },new { @class= "text-success" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.LevelID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.LevelID }, new { @class = "text-danger" })
                        </td>
                    </tr>
                }


        </table>
    </div>

    </div>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>
               