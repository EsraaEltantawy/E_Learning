@model IEnumerable<E_Learning.Models.SubjectClass>

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-warning" })
</p>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped table-light text-center" id="dataTable" width="100%" cellspacing="0">
            <thead class="bg-dark text-light ">
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Class.ClassName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Subject.SubName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Notes)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tfoot class="bg-dark text-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Class.ClassName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Subject.SubName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Notes)
                    </th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Class.ClassName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject.SubName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.SubLevelID }, new { @class = "text-success" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.SubLevelID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.SubLevelID }, new { @class = "text-danger" })
                    </td>
                </tr>
                }

        </table>
    </div>

</div>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>